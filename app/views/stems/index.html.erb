<center><h3>Questions</h3></center>

<table class="table">
  <thead>
    <tr>
      <th>Content</th>
      <th>Exam</th>
	<% if user_signed_in? %>
	<% if current_user.is_admin == 1 %>
      <th></th>
      <th></th>
      <th></th>
	<% else %>
	<% end %>
	<% else %>
	<% end %>
    </tr>
  </thead>

  <tbody>
    <% @stems.each do |stem| %>
      <tr>
        <td><%= stem.content %></td>
		<% exam = Exam.find(stem.exam_id) %>
	    <td><%= exam.content %></td>
	<% if user_signed_in? %>
	<% if current_user.is_admin == 1 %>
        <td><%= link_to 'Show', stem %></td>
        <td><%= link_to 'Edit', edit_stem_path(stem) %></td>
        <td><%= link_to 'Destroy', stem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<% else %>
	<% end %>
	<% else %>
	<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<center><%= link_to 'New Question', new_stem_path, :class => "btn btn-primary" %></center>
